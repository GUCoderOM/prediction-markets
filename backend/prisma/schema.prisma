generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum MarketStatus {
  open
  closed
  resolved
}

enum Outcome {
  yes
  no
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  balance   Int      @default(1000)
  isAdmin   Boolean  @default(false)
  trades    Trade[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Market {
  id           Int                   @id @default(autoincrement())
  title        String
  description  String
  status       MarketStatus          @default(open)
  yesShares    Float                 @default(0)
  noShares     Float                 @default(0)
  resolution   Outcome?
  trades       Trade[]
  createdAt    DateTime              @default(now())
  updatedAt    DateTime              @updatedAt
  priceHistory MarketPriceSnapshot[]
  candles      MarketCandle[]
}

model Trade {
  id        Int      @id @default(autoincrement())
  userId    Int
  marketId  Int
  outcome   Outcome
  shares    Float
  cost      Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id])
  market Market @relation(fields: [marketId], references: [id])
}

model MarketPriceSnapshot {
  id        Int      @id @default(autoincrement())
  marketId  Int
  priceYes  Float
  priceNo   Float
  createdAt DateTime @default(now())

  market Market @relation(fields: [marketId], references: [id])
}

model MarketCandle {
  id        Int      @id @default(autoincrement())
  marketId  Int
  open      Float
  high      Float
  low       Float
  close     Float
  timeframe String   @default("5s") // <-- ADD THIS
  timestamp DateTime

  market Market @relation(fields: [marketId], references: [id])
}
